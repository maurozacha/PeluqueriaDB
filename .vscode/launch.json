{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PeluqueriaDB backend",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "envFile": "${workspaceFolder}/.env",  
      "env": {
        "FLASK_APP": "peluqueria_backend.app:create_app",
        "FLASK_ENV": "development",
        "PYTHONPATH": "${workspaceFolder}"  
      },
      "args": [
        "run",
        "--debugger",
        "--no-reload",
        "--host=0.0.0.0",
        "--port=8080"
      ],
      "jinja": true,
      "justMyCode": false  
    }
  ]
}